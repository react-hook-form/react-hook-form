{
  "name": "react-hook-form",
  "version": "3.22.1",
  "main": "dist/react-hook-form.js",
  "module": "dist/react-hook-form.es.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist/* && rm -rf .rpt2_cache",
    "build": "yarn clean && yarn build:modern && yarn build:ie11",
    "build:modern": "rollup -c",
    "build:ie11": "rollup -c rollup.ie11.config.js",
    "watch": "tsc --watch",
    "release": "npm version",
    "lint": "eslint ./src --ext .jsx,.ts --ignore-pattern *.test.ts",
    "coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "postrelease": "yarn publish && git push --follow-tags",
    "test": "jest --runInBand",
    "test:coverage": "jest --runInBand --coverage",
    "testw": "yarn test:coverage -- --watchAll",
    "cypress": "cypress run",
    "cypress:open": "cypress open",
    "bundlesize": "yarn clean && yarn build:modern && bundlesize",
    "prepublish": "yarn lint && yarn test && yarn run clean && yarn build",
    "start:app": "yarn build && yarn link && yarn --cwd node_modules/react link && yarn --cwd ./app link react react-hook-form && yarn --cwd ./app && yarn --cwd ./app run start"
  },
  "keywords": [
    "react",
    "hooks",
    "form",
    "forms",
    "form-validation",
    "validation",
    "typescript",
    "react-hooks"
  ],
  "repository": "https://github.com/bluebill1049/react-hook-form.git",
  "homepage": "https://react-hook-form.now.sh",
  "author": "<bluebill1049@hotmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/react": "^9.1.3",
    "@testing-library/react-hooks": "^2.0.1",
    "@types/jest": "^24.0.11",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-test-renderer": "^16.9.0",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "bundlesize": "^0.18.0",
    "coveralls": "^3.0.3",
    "cypress": "^3.4.0",
    "eslint": "^5.16.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.1",
    "husky": ">=1",
    "jest": "^24.7.1",
    "lint-staged": ">=8",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-test-renderer": "^16.9.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.9.3",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-typescript2": "^0.20.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  },
  "bundlesize": [
    {
      "path": "./dist/react-hook-form.es.js",
      "maxSize": "5 kB"
    }
  ],
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{jsx,ts},!app/": [
      "eslint --fix",
      "prettier --config ./.prettierrc --write",
      "git add"
    ]
  }
}
